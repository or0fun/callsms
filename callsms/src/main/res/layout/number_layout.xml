<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题栏 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_backgound"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/title_bar_icon_width"
            android:layout_height="@dimen/title_bar_icon_height"
            android:layout_margin="@dimen/smallmargin"
            android:gravity="bottom"
            android:src="@drawable/we" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingTop="1dip"
            android:text="@string/title_bar_number"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="3dp"
            android:background="#dd333333"
            android:textColor="@color/white"
            android:text="@string/scan_short"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/smallmargin"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.fang.common.controls.CustomEditText
                android:id="@+id/search"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                custom:hintText="@string/number_search"
                android:inputType="number"/>
        </LinearLayout>
        <Button
            android:id="@+id/searchBtn"
            style="@style/mainButton"
            android:layout_width="@dimen/small_button_width"
            android:layout_margin="@dimen/smallmargin"
            android:text="@string/number_searchBtn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/smallmargin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/result"
            style="@style/number_info"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </TextView>

        <!-- 历史上的今天 -->
        <TextView
            android:id="@+id/today"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green" />
        <TextView
            android:id="@+id/history"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/history_of_today"
            android:textColor="@color/button"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yt_line" />

        <!-- 天气预报 -->
        <TextView
            android:id="@+id/weather_city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green" >
        </TextView>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yt_line" >
        </ImageView>

        <HorizontalScrollView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">
            <LinearLayout
                android:id="@+id/weatherList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallmargin"
                android:gravity="center"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>
        <!-- 常用服务号码 -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/number_common"
            android:textColor="@color/green" >
        </TextView>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yt_line" >
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/smallmargin"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/foodlistBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallmargin"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/food" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_meal"
                    android:textColor="@color/number_service" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/houselistBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallmargin"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/house" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_house"
                    android:textColor="@color/number_service" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/expresslistBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallmargin"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/express" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_express"
                    android:textColor="@color/number_service" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/servicelistBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallmargin"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/service" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_service"
                    android:textColor="@color/number_service" >
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/searchExpressBtn"
            style="@style/mainButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttonHeight"
            android:text="@string/number_searchExpress" />
    </LinearLayout>

</LinearLayout>